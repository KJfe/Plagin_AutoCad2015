<Window
    x:Class="Plagin_AutoCad.View.MainGUI"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Plagin_AutoCad.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:userControls="clr-namespace:Plagin_AutoCad.View.UcerControls"
    Title="MainGUI"
    Width="300"
    Height="300"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>

            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />

        </Grid.RowDefinitions>

        <userControls:ShowLayers Grid.Row="0" DataContext="{Binding ShowLayers}" />
        <userControls:ColorPicker Grid.Row="1" Visibility="{local:ParentWindowBinding DataContext.VisibleColorPicker}" />

    </Grid>
</Window>
