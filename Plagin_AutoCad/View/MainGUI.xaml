<Window
    x:Class="Plagin_AutoCad.View.MainGUI"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Plagin_AutoCad.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:userControls="clr-namespace:Plagin_AutoCad.View.UcerControls"
    Title="MainGUI"
    Width="370"
    Height="400"
    MinWidth="370"
    MaxWidth="400"
    WindowStyle="SingleBorderWindow"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>

            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />


        </Grid.RowDefinitions>

        <userControls:ShowLayers Grid.Row="0" DataContext="{Binding ShowLayers}" />
        <GridSplitter
            Grid.Row="1"
            Height="3"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Center"
            ShowsPreview="False" />
        <userControls:ColorPicker
            Grid.Row="2"
            DataContext="{Binding ColorPicker}"
            Visibility="{local:ParentWindowBinding DataContext.VisibleColorPicker}" />
        <!--
        <userControls:BlockTable Grid.Row="2" DataContext="{Binding BlockTable}" />
        -->
    </Grid>
</Window>
